{% extends '_templates/base.njk' %}

{% block page_title %}home{% endblock %}
{% block content %}
<div class="container">
   <div class="row justify-content-center text-center">
    <div class="col col-sm-12 col-md-9 col-lg-9">
        <h1> Hello! </h1>
        <p> Welcome to my food guide to Austin! Take a look around and explore some of my favorites that I have disocvered over the past three years in Austin! </p>
    </div>
  </div>
</div>

<div class="container text-center">
   <div class="row justify-content-center">
    <div class="col col-sm-12 col-md-9 col-lg-9">
        <h2> Lists </h2>
    </div>
  </div>
</div>

<div class="container text-center">
<div class="row justify-content-center row-cols-1 row-cols-md-3 row-col-lg-6 g-4"> 
  {% for blog in blog.blogs %}
  <div class="col">
    <div class="card">
      <img src="img/{{ blog.image }}" class="card-img-top" alt="icon">
      <div class="card-body">
        <h5 class="card-title">{{ blog.slug }}</h5>
        <a href="blog/{{ blog.slug }}.html" class="btn btn-success"> {{ blog.headline }}</a>
      </div>
    </div>
  </div> 
  {% endfor %}
</div>
</div>

<div class="container text-center">
   <div class="row justify-content-center mt-4">
    <div class="col col-sm-12 col-md-9 col-lg-9">
        <h2> All of the Best </h2>
    </div>
  </div>
</div>

<div class="container text-center">
<div class="row justify-content-center row-cols-1 row-cols-md-3 row-col-lg-6 g-4"> 
  {% for restaurant in lists.stops %}
  <div class="col">
    <div class="card">
      <img src="img/{{ restaurant.slug }}.jpg" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title">{{ restaurant.restaurant }}</h5>
        <a href="{{ restaurant.url }}" class="btn btn-success">Check out the website</a>
      </div>
    </div>
  </div> 
{% endfor %}
</div>
</div>

{% endblock %}
