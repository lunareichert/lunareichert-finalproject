{% extends '_templates/base.njk' %}

{% block page_title %}breakfast{% endblock %}

{% block page_description %}A list of the best breakfast stops in Austin.{% endblock %}

{% block content %}
<div class="container">
   <div class="row justify-content-center">
    <div class="col col-sm-12 col-md-9 col-lg-9">
  <h1>breakfast recommendations</h1>
  <p>best coffee and breakfast in austin</p>
  </div>
  </div>
  </div>

<div class="container-fluid row row-cols-1 row-cols-md-2 g-4">
 {% for restaurant in lists.stops %}
  {% if restaurant.category == "breakfast" %}
    <div class="col">
      <div class="card">
        <img src="img/{{ restaurant.slug }}.jpg" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">{{ restaurant.restaurant }}</h5>
          <p class="card-text">{{ restaurant.blurb }}</p>
          <a href="{{ restaurant.url }}" class="btn btn-success">Check out the website</a>
        </div>
      </div>
    </div>
  {% endif %}
{% endfor %}

</div>
{% endblock %}
